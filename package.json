{
  "name": "summitx-v3",
  "private": true,
  "workspaces": [
    "projects/*",
    "deployer/*",
    "common"
  ],
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf yarn.lock && rm -rf package-lock.json && rm -rf .yarn && rm -rf */*/artifacts && rm -rf */*/cache && rm -rf */*/node_modules && rm -rf */*/package-lock.json && rm -rf */*/yarn.lock",
    "compile": "yarn workspaces run compile",
    "test": "yarn workspaces run test",
    "deploy-base-camp": "NETWORK=baseCamp yarn zx v3-deploy.mjs",
    "verify-base-camp": "NETWORK=baseCamp yarn zx v3-verify.mjs",
    "deploy-camp": "NETWORK=camp yarn zx v3-deploy.mjs",
    "verify-camp": "NETWORK=camp yarn zx v3-verify.mjs",
    "deploy-hardhat": "NETWORK=hardhat yarn zx v3-deploy.mjs",
    "verify-hardhat": "NETWORK=hardhat yarn zx v3-verify.mjs"
  },
  "devDependencies": {
    "zx": "^7.2.0",
    "@typechain/hardhat": "^6.1.5",
    "solidity-docgen": "^0.6.0-beta.35",
    "find-config": "^1.0.0"
  },
  "volta": {
    "node": "16.19.1"
  }
}
